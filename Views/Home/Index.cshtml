@{
    ViewData["Title"] = "Innorik Book Store";
}

<section class="py-5 bg-light">
    <div class="container text-center">
        <div class="mb-4">
            <h1 class="display-3 fw-bold text-primary">📚 Innorik Book Store</h1>
            <p class="lead text-muted">Discover, buy, and manage your favorite books effortlessly.</p>
        </div>

        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="/Books" class="btn btn-lg btn-success px-4 py-2 shadow-sm">
                Browse Books
            </a>
            <a href="/Cart" class="btn btn-lg btn-outline-primary px-4 py-2 shadow-sm">
                View Cart 🛒
            </a>
        </div>

        <div class="mt-5">
            <img src="~/images/landing-books.svg" alt="Books Illustration" class="img-fluid" style="max-height: 300px;" />
        </div>
    </div>
</section>
