@using BookStore.Models
@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-danger mb-4">⚠️ Confirm Deletion</h3>

            <p class="mb-4">Are you sure you want to delete the following book?</p>

            <div class="mb-3">
                <strong>Title:</strong> @Model.Title <br />
                <strong>Author:</strong> @Model.Author
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <input type="submit" value="Yes, Delete" class="btn btn-danger" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
